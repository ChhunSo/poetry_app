<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Floetry</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheet/style.css">
	
</head>
<body id="Home">
	<div class = "navbar navbar-default navbar-fixed-top">
		<div class="container">
			<button class = "navbar-toggle" data-toggle = "collapse" data-target = ".navHeaderCollapse">	
				<span class = "icon-bar"></span>
				<span class = "icon-bar"></span>
				<span class = "icon-bar"></span>
				<span class = "icon-bar"></span>
			</button>
			<div class = "collapse navbar-collapse navHeaderCollapse">
				<ul class = "nav navbar-nav navbar-right">
					<li class = "active"><a href = "/">Home</a></li>
					<li><a href = "/poems/all">User Poems</a></li>
                    <li><a href = "/poemList">List of Poems</a></li>
					<li><a href = "/logout">Logout</a></li>
				</ul>
			</div>				
		</div>
	</div>
    <div class="jumbotron">
    	<div class="container">
	<a href="/User/post">Create a Poem</a>
	<h2>Your Poems</h2>
	<%poemList.forEach(function(p){ %>
	<h3>Title:</h3> 
	<p><%=p.title%></p>	
	<h3>Content:</h3> 
	<p><%=p.content%></p>
	<form action="/poems/<%= p.id %>?_method=DELETE" method="POST">
		<button>Delete</button>
	</form>
	<form action="/poems/<%=p.id %>/edit" method="GET">
		<button>Edit</button>
	</form>
	<%})  %>
	</div>	
	<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
